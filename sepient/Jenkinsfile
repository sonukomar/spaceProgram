pipeline{
    agent none
    triggers {
        pollSCM '*/5 * * * *'
    }    
    stages{
        stage("build"){
            steps{
                echo "========executing build======="
            }
            post{
                always{
                    echo "========always========"
                }
                success{
                    echo "========A executed successfully========"
                }
                failure{
                    echo "========A execution failed========"
                }
            }
        }
    }
    post{
        always{
            echo "========always========"
        }
        success{
            echo "========pipeline executed successfully ========"
        }
        failure{
            echo "========pipeline execution failed========"
        }
    }
}
